<html>
  <head>
    <title>Cohort Report Selection</title>
    <%= stylesheet_link_tag "form" %>
    <%= stylesheet_link_tag fancy_or_high_contrast_touch %>
    <link href="/stylesheets/dashboard.css" media="screen" rel="stylesheet" type="text/css" />
    <script type="text/javascript" language="javascript">
      <!--
      tt_cancel_destination = '/reports/select';
      tt_show = '/reports/select';
      //-->
    </script>
    <style media="print">
      button {
        display: none;
      }
      #main {
        height: 100%;
      }
    </style>
    <style>
      #Unknown {display: none;}
      #num {display: none;}
      #main {
        height: 440px;
      }

      a:link {
        color: #333366;
        text-decoration: none;
      }

      a:hover {
        color: orange !important;
        text-decoration: underline;
      }

      a:visited {
        color: #333366;
        text-decoration: none;
      }

      button {
        min-width: 150px;
      }

      .table {
        display: table;
        border-spacing: 2px;
      }

      .row {
        display: table-row;
      }

      .cell {
        display: table-cell;
        border-left: 1px solid #6281A7;
        border-bottom: 1px solid #6281A7;
        padding: 5px;
      }

      .headerCell {
        display: table-cell;
        padding: 5px;
        background-color: #6281A7;
        font-weight: normal;
        color: #fff;
      }
    </style>
    <script type="text/javascript" language="javascript">
      <!--
      
      function __$(id){
        return document.getElementById(id);
      }
      
      function expand(id){
        if(id.trim().length > 0){
        
          if(__$(id).style.display == "none"){
            if(__$("__" + id)){
              __$("__" + id).style.display = "none";
            }
            __$(id).style.display = "block";
            return "/images/minus.png";
          } else {
            __$(id).style.display = "none";
            if(__$("__" + id)){
              __$("__" + id).style.display = "block";
            }
            return "/images/plus.png";
          }
        }
      }
      
      //-->
    </script>
  </head>
  <body>
    <div id="content">

      <div style="background-color: #fff; height: 660px; width: 99%; padding: 5px;">
        <table style="width: 100%; border: 1px solid #999; -moz-user-select: none;">
          <tr>
            <th style="font-size: 1.8em; color: #eee; background-color: #999; padding: 10px;">
              ANC C<span style="font-size: 0.8em">LINIC</span> - 
              F<span style="font-size: 0.8em">ACILITY</span>
              D<span style="font-size: 0.8em">RILL-DOWN</span>
            </th>
          </tr>
          <tr>
            <td style="height: 595px; border: 1px solid #ccc; vertical-align: top;">
              <div style="width: 100%; height: 590px; overflow: auto;">
                <div class="table" style="width: 100%; ">
                  <div class="row">
                    <div class="headerCell">
                      Patient ID
                    </div>
                    <div class="headerCell">
                      Patient Name
                    </div>
                    <div class="headerCell">
                      Date Registered
                    </div>
                    <div class="headerCell">
                      Date Of Birth
                    </div>
                    <div class="headerCell">
                      Encounters
                    </div>
                  </div>

                  <% @patients.each do |patient| %>
                    <% patient = ANCService::ANC.new(patient) %>
                    <div class="row">
                      <div class="cell">
                        <%= patient.national_id rescue "&nbsp;" %>
                      </div>
                      <div class="cell">
                        <%= patient.name rescue "" %>
                      </div>
                      <div class="cell">
                        <%= patient.patient.date_created.strftime("%d/%b/%Y") rescue "" %>
                      </div>
                      <div class="cell">
                        <%= patient.birthdate_formatted rescue "" %>
                      </div>
                      <div class="cell" style="vertical-align: top; padding: 0px;">
                        <div class="table">
                          <div class="row">
                            <div style="display: table-cell; padding: 0px; padding-left: 10px; padding-right: 10px;">
                              <img onclick="this.src=expand('<%= patient.national_id rescue "" %>')" 
                                   style="height: 32px; width: 32px; cursor: pointer;" 
                                   src="/images/plus.png" />
                            </div>
                            <div id="<%= "__" + patient.national_id rescue "" %>" 
                                 style="display: block; display: table-cell; vertical-align: middle; font-size: 1.5em;">
                              <%= patient.patient.encounters.length %>
                            </div>
                            <div id="<%= patient.national_id rescue "" %>" style="display: table-cell; display: none; width: 100%;">
                              <% pos = 0 %>

                              <% patient.patient.encounters.each do |encounter| %>
                                <% pos = pos + 1 %>

                                <div style="display: table; width: 100%;">
                                  <div style="display: table-row;">
                                    <div style="display: table-cell;">
                                      <%= "<b style='color: #333; float: left;'>" + pos.to_s + ". "+ 
                                        (encounter.type.name.titleize rescue "&nbsp;") + " <i>(" + 
                                        (encounter.encounter_datetime.strftime("%d/%b/%Y") rescue "&nbsp;") + 
                                        ")</i></b>" %>
                                    </div>
                                    <div style="display: table-cell;">
                                      <img onclick="this.src=expand('<%= (patient.national_id rescue "") + "_" + pos.to_s %>')" 
                                           style="height: 32px; width: 32px; cursor: pointer; float: right; margin-left: 20px;" 
                                           src="/images/plus.png" />
                                    </div>
                                  </div>
                                </div>
                                <%= ("<div id='" + (patient.national_id rescue "") + "_" + pos.to_s + 
                                    "' style='margin: 20px; border-radius: 10px; background-color: #ee6; padding: 10px; display: none;'>" + 
                                    encounter.to_s + "</div><br />" rescue "&nbsp;") if !encounter.to_s.nil? %>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div id="nav">
        <button class="green" style="float: right; margin: 10px; width: 150px;" onclick="window.location = tt_show">
          <span>
            Finish
          </span>
        </button>
        <button class="blue" style="float: right; margin: 10px; width: 150px;" onclick="back()">
          <span>
            Back
          </span>
        </button>
      </div>
    </div>
  </body>
</html>
