<style type="text/css">
  .slanted {
    -moz-transform:rotate(-60deg);
  }
  .vert{
    -moz-transform:rotate(-90deg);
  }
  .leftTop {
    border-top: 1px solid #000;
    border-left: 1px solid #000;
  }
  .rightBottom {
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
  }
  .topic {
    text-align: center;
  }
  .selected{
    border: 1px solid #00f;
    -moz-border-radius: 10px;
    width:20px;
    text-align: center;
  }

  table {
    font-size: 0.9em;
  }
  
  #main td {
    vertical-align: top;
  }
</style>

<table width="100%" border="0" cellpadding="0">
  <tr>
    <th style="height: 30px; font-size: 1.4em;" align="left">
      Visit History
  <div style="font-size: 0.6em;
       font-weight: normal; padding-right: 10px;">
    <table style="border: 1px solid #000;">
      <tr>
        <th>
          LMP:
        </th>
        <td>
          <%= @current_range[0]["START"].to_date.strftime("%d/%b/%Y") rescue "&nbsp;" %>
        </td>
        <th style="padding-left: 30px;">
          EDD:
        </th>
        <td>
          <%= @current_range[0]["END"].to_date.strftime("%d/%b/%Y") rescue "&nbsp;" %>
        </td>
        <th style="padding-left: 30px;">
          Planned Delivery Place:
        </th>
        <td>
          <%= @current_range[0]["PLANNED DELIVERY PLACE"] rescue "&nbsp;" %>
        </td>
        <th style="padding-left: 30px;">
          Bed Net Given?:
        </th>
        <td>
          <%= @current_range[0]["MOSQUITO NET"] rescue "&nbsp;" %>
        </td>
      </tr>
    </table>   
     
  </div>
</th>
</tr>
<tr>
  <td>
